# QuDAG Testnet Environment Configuration
# Copy this file to .env and edit with your actual values

# ======================
# Fly.io Configuration
# ======================
FLY_API_TOKEN=your_fly_api_token_here
FLY_ORG=your_fly_org_name

# ======================
# Network Configuration
# ======================
QUDAG_NETWORK_ID=qudag-testnet
QUDAG_ENVIRONMENT=testnet

# ======================
# Node Configuration
# ======================
QUDAG_NODE_NAME_PREFIX=qudag-testnet
QUDAG_DARK_DOMAIN_ENABLED=true
QUDAG_DARK_DOMAIN_NAMESPACE=testnet
QUDAG_DARK_DOMAIN_REGISTRATION_FEE=100

# ======================
# Consensus Parameters
# ======================
QUDAG_CONSENSUS_TYPE=dag
QUDAG_BLOCK_TIME=5s
QUDAG_FINALITY_THRESHOLD=0.8
QUDAG_MIN_VALIDATORS=3

# ======================
# Security Configuration
# ======================
QUDAG_API_AUTH_ENABLED=true
QUDAG_TLS_ENABLED=true
QUDAG_CORS_ALLOWED_ORIGINS=https://qudag-testnet-node1.fly.dev,https://qudag-testnet-node2.fly.dev,https://qudag-testnet-node3.fly.dev,https://qudag-testnet-node4.fly.dev

# ======================
# Monitoring Configuration
# ======================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# ======================
# Resource Limits
# ======================
NODE_MEMORY_LIMIT=2G
NODE_CPU_LIMIT=2
PERSISTENT_VOLUME_SIZE=10GB

# ======================
# Backup Configuration
# ======================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=100MB

# ======================
# Development/Testing
# ======================
TESTING_MODE=false
MOCK_CONSENSUS=false
SKIP_PEER_VERIFICATION=false

# ======================
# Regional Configuration
# ======================
# Node 1 - Toronto (Bootstrap)
NODE1_REGION=yyz
NODE1_ROLE=bootstrap
NODE1_EXTERNAL_IP=
NODE1_PEER_ID=

# Node 2 - Amsterdam
NODE2_REGION=ams
NODE2_ROLE=validator
NODE2_EXTERNAL_IP=
NODE2_PEER_ID=

# Node 3 - Singapore
NODE3_REGION=sin
NODE3_ROLE=validator
NODE3_EXTERNAL_IP=
NODE3_PEER_ID=

# Node 4 - San Francisco
NODE4_REGION=sjc
NODE4_ROLE=validator
NODE4_EXTERNAL_IP=
NODE4_PEER_ID=

# ======================
# MCP Configuration
# ======================
MCP_ENABLED=true
MCP_PORT=3001
MCP_AUTH_TOKEN=your_mcp_token_here
MCP_CORS_ENABLED=true

# ======================
# Advanced Configuration
# ======================
QUANTUM_RESISTANCE_ENABLED=true
ADVANCED_CRYPTOGRAPHY=true
PERFORMANCE_OPTIMIZATION=true
DEBUG_MODE=false
VERBOSE_LOGGING=false