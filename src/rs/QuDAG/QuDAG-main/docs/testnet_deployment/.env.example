# QuDAG Testnet Environment Variables
# Copy this file to .env and update with your values

# Fly.io Configuration
FLY_API_TOKEN=your_fly_api_token_here
FLY_ORG=personal

# QuDAG Network Configuration
QUDAG_NETWORK_ID=qudag-testnet
QUDAG_NETWORK_NAME="QuDAG Testnet"

# Node Configuration
QUDAG_NODE_KEY_TYPE=ed25519
QUDAG_CONSENSUS_TYPE=dag
QUDAG_DARK_DOMAIN_ENABLED=true

# P2P Configuration
QUDAG_P2P_PORT=4001
QUDAG_P2P_MAX_PEERS=50
QUDAG_P2P_MIN_PEERS=3
QUDAG_P2P_ENABLE_MDNS=false
QUDAG_P2P_ENABLE_RELAY=true
QUDAG_P2P_ENABLE_AUTONAT=true

# RPC Configuration
QUDAG_RPC_PORT=8080
QUDAG_RPC_ENABLED=true
QUDAG_RPC_RATE_LIMIT=100

# Metrics Configuration
QUDAG_METRICS_PORT=9090
QUDAG_METRICS_ENABLED=true

# Dark Domain Configuration
QUDAG_DARK_DOMAIN_REGISTRATION_FEE=100
QUDAG_DARK_DOMAIN_MIN_LENGTH=3
QUDAG_DARK_DOMAIN_MAX_LENGTH=63

# Security Configuration
QUDAG_TLS_ENABLED=true
QUDAG_AUTH_ENABLED=true
QUDAG_API_KEY=generate_secure_api_key_here

# Database Configuration
QUDAG_DB_PATH=/data/qudag/db
QUDAG_DB_CACHE_SIZE=1073741824

# Logging Configuration
RUST_LOG=info,qudag=debug
RUST_BACKTRACE=1

# Resource Limits
QUDAG_MAX_MEMORY=2048
QUDAG_MAX_CPU=2
QUDAG_MAX_DISK=10240

# Monitoring
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000

# MCP Server Configuration (if enabled)
QUDAG_MCP_ENABLED=false
QUDAG_MCP_PORT=3000
QUDAG_MCP_AUTH_TOKEN=generate_secure_mcp_token_here

# Bootstrap Configuration
# These will be set automatically during deployment
BOOTSTRAP_PEERS=

# Node-specific overrides (uncomment and modify as needed)
# NODE1_CUSTOM_CONFIG=value
# NODE2_CUSTOM_CONFIG=value
# NODE3_CUSTOM_CONFIG=value
# NODE4_CUSTOM_CONFIG=value