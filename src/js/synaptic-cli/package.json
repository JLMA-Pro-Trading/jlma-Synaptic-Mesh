{
  "name": "synaptic-mesh",
  "version": "1.0.0-alpha.1",
  "description": "ðŸ§  Synaptic Neural Mesh - Self-evolving distributed neural fabric with quantum-resistant DAG networking",
  "keywords": [
    "neural-mesh",
    "distributed-ai",
    "swarm-intelligence",
    "dag-networking",
    "quantum-resistant",
    "p2p",
    "neural-networks",
    "ephemeral-agents",
    "self-evolving",
    "wasm",
    "machine-learning",
    "ai-orchestration"
  ],
  "homepage": "https://github.com/ruvnet/Synaptic-Neural-Mesh",
  "bugs": {
    "url": "https://github.com/ruvnet/Synaptic-Neural-Mesh/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruvnet/Synaptic-Neural-Mesh.git"
  },
  "license": "MIT",
  "author": "rUv",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "synaptic-mesh": "./bin/synaptic-mesh",
    "synaptic": "./bin/synaptic-mesh"
  },
  "files": [
    "bin/",
    "lib/",
    "src/",
    "wasm/",
    "templates/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:ts && npm run build:wasm && npm run build:bin",
    "build:ts": "tsc -p tsconfig.json",
    "build:wasm": "node scripts/build-wasm.js",
    "build:bin": "node scripts/prepare-bin.js",
    "clean": "rimraf lib dist",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "quality:check": "npm run lint && npm run test",
    "prepublishOnly": "npm run quality:check && npm run build",
    "publish:alpha": "npm publish --tag alpha",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish",
    "test:npx": "node scripts/test-npx.sh",
    "validate:global": "npm pack && node scripts/validate-global.js",
    "postinstall": "node scripts/postinstall.js || echo 'Postinstall script skipped'",
    "start": "node bin/synaptic-mesh",
    "dev": "ts-node src/cli.ts"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.0.0-beta2",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "figlet": "^1.8.2",
    "fs-extra": "^11.3.0",
    "gradient-string": "^3.0.0",
    "inquirer": "^9.2.15",
    "libp2p": "^1.2.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "claude-flow": "^2.0.0",
    "ruv-swarm": "^1.0.18"
  },
  "peerDependenciesMeta": {
    "ruv-swarm": {
      "optional": true
    },
    "claude-flow": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "alpha"
  },
  "synaptic": {
    "defaultPort": 8080,
    "defaultNetwork": "mainnet",
    "quantumResistant": true,
    "neuralArchitecture": "adaptive",
    "swarmTopology": "mesh",
    "wasmModules": [
      "ruv_swarm_wasm_bg.wasm",
      "ruv_swarm_simd.wasm",
      "ruv-fann.wasm",
      "neuro-divergent.wasm"
    ]
  }
}
